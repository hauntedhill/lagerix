<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app error-url="">
  <context-root>Lagerix</context-root>
 
 

 
  <!-- role mapping --> 
    <security-role-mapping>
    <role-name>EINKAEUFER</role-name>
    <group-name>EINKAEUFER</group-name>
  </security-role-mapping>
  
    <security-role-mapping>
    <role-name>LAGERVERWALTER</role-name>
    <group-name>LAGERVERWALTER</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>BENUTZER</role-name>
    <group-name>BENUTZER</group-name>
  </security-role-mapping>
   
  <security-role-mapping>
    <role-name>LAGERARBEITER</role-name>
    <group-name>LAGERARBEITER</group-name>
  </security-role-mapping>
   
  <security-role-mapping>
    <role-name>ADMINISTRATOR</role-name>
    <group-name>ADMINISTRATOR</group-name>
  </security-role-mapping>
 
  <!-- default --> 
  <class-loader delegate="true"/>
  <jsp-config>
    <property name="keepgenerated" value="true">
      <description>Keep a copy of the generated servlet class' java code.</description>
    </property>
  </jsp-config>
   
</glassfish-web-app>